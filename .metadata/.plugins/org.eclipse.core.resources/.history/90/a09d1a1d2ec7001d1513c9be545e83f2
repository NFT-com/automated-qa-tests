		//System.out.println(FieldEditor);
		FieldEditor.isDisplayed();

		WebElement DataCleansing = driver.findElement(By.xpath("//li[@id='DataCleansing']//a[@id='NotActiveTab']"));
		//System.out.println(DataCleansing);
		DataCleansing.isDisplayed();

		WebElement DataCleansingHistory = driver
				.findElement(By.xpath("//a[contains(text(),'Data Cleansing History')]"));
		//System.out.println(DataCleansingHistory);
		DataCleansingHistory.isDisplayed();

		WebElement Configuration = driver.findElement(By.xpath("//a[contains(text(),'Configuration')]"));
		//System.out.println(Configuration);
		Configuration.isDisplayed();

		WebElement FieldGroupEditor = driver.findElement(By.xpath("//a[contains(text(),'Field Group Editor')]"));
		//System.out.println(FieldGroupEditor);
		FieldGroupEditor.isDisplayed();

		WebElement Revert = driver.findElement(By.xpath("//a[contains(text(),'Revert')]"));
		//System.out.println(Revert);

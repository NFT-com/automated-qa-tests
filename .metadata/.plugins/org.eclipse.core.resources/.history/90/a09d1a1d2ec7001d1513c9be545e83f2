	public void ClickOnEtailer() {

		JavascriptExecutor js = (JavascriptExecutor) driver;
		WebElement etail = driver.findElement(By.xpath("//a[text()='Etailer']"));
		js.executeScript("arguments[0].click();", etail);
		// Etailer.click();

	}


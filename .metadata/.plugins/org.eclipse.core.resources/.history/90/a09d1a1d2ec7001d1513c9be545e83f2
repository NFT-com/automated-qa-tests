package com.nft.qa.pages;

import org.openqa.selenium.By;
import org.openqa.selenium.JavascriptExecutor;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.support.FindBy;
import org.openqa.selenium.support.PageFactory;
import org.testng.Assert;

import com.nft.qa.base.TestBase;

public class IgniteTabsVarification extends TestBase {

	@FindBy(xpath = "//a[contains(text(),'Reports')]")
	WebElement Reports;

	@FindBy(xpath = "//a[contains(text(),'Leads')]")
	WebElement Leads;

	@FindBy(xpath = "//a[contains(text(),'Accounts')]")
	WebElement Accounts;

	@FindBy(xpath = "//a[contains(text(),'Help')]")
	WebElement Help;

	@FindBy(xpath = "//a[contains(text(),'Monitor')]")
	WebElement Monitor;

	@FindBy(xpath = "//a[contains(text(),'Etailer')]")
	WebElement Etailer;

	@FindBy(xpath = "//a[contains(text(),'Admin Tools')]")
	WebElement AdminTools;

	public IgniteTabsVarification() {

		PageFactory.initElements(driver, this);
	}

	public void VerifyLocationTab() {

		String LocationManager = driver.findElement(By.xpath("//a[contains(text(),'Locations Manager')]")).getText();
		System.out.println(LocationManager);
		Assert.assertTrue(LocationManager.contains("Locations Manager"));

		String NewDealerApprovalQueue = driver
				.findElement(By.xpath("//a[contains(text(),'New Dealer Approval Queue')]")).getText();
		System.out.println(NewDealerApprovalQueue);
		Assert.assertTrue(NewDealerApprovalQueue.contains("New Dealer Approval Queue"));

		String SocialLocationManager = driver.findElement(By.xpath("//a[contains(text(),'Social Location Manager')]"))
				.getText();
		System.out.println(SocialLocationManager);
		Assert.assertTrue(SocialLocationManager.contains("Social Location Manager"));

	}

	public void VerifyFilesTab() {

		WebElement Upload = driver.findElement(By.xpath("//a[contains(text(),'Upload')]"));
		//System.out.println(Upload);
		Upload.isDisplayed();

		WebElement Schedule = driver.findElement(By.xpath("//a[contains(text(),'Schedule')]"));
		//System.out.println(Schedule);
		Schedule.isDisplayed();

		WebElement Download = driver.findElement(By.xpath("//li[@id='Download']//a[@id='NotActiveTab']"));

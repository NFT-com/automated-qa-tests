package com.nft.qa.pages;

import org.openqa.selenium.By;
import org.openqa.selenium.JavascriptExecutor;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.support.FindBy;
import org.openqa.selenium.support.PageFactory;
import org.testng.Assert;

import com.nft.qa.base.TestBase;
import com.nft.qa.util.TestUtility;

public class NEDPAddDeleteStation extends TestBase {

	TestUtility testUtil = new TestUtility();

	@FindBy(xpath = "//tr[1]//td[1]//button[1]")
	WebElement Edit;

	@FindBy(xpath = "//button[contains(text(),'Add new station')]")
	WebElement Addnewstation;

	@FindBy(xpath = "//tr[5]//td[1]//div[1]//button[1]")
	WebElement StationChekBox;

	@FindBy(xpath = "//button[contains(text(),'Select')]")
	WebElement Select;

	@FindBy(xpath = "//button[contains(text(),'Save')]")
	WebElement Save;
	
	@FindBy(xpath = "//*[@id=\"modalitiessessionConfigTab\"]/modality-check[1]/div/div[1]/div[2]/div/div[1]/span/i")
	WebElement ReadingSessionSelect;

	@FindBy(xpath = "//span[contains(text(),'[ Select Form to Override with ... ]')]")
	WebElement ReadingSelectOvrride;
	
	@FindBy(xpath = "//*[@id=\"modalitiessessionConfigTab\"]/modality-check[3]/div/div[1]/div[2]/div/div[1]/span/i")
	WebElement ListeningSessionSelect;

	@FindBy(xpath = "//span[contains(text(),'[ Select Form to Override with ... ]')]")
	WebElement ListeningSelectOvrride;

	
	
	
	
	public NEDPAddDeleteStation() {
		PageFactory.initElements(driver, this);
	}

	public void AddStation() throws InterruptedException {
		
		Thread.sleep(3000);
		WebElement edit = driver.findElement(By.xpath("/descendant::button[contains(text(),'Edit')][1]"));
		JavascriptExecutor jv = (JavascriptExecutor) driver;
		jv.executeScript("arguments[0].click();", edit);
		
		Thread.sleep(3000);
		driver.findElement(By.xpath("//check-select[@class='ng-isolate-scope']//button[@class='btn btn-default btn-xs']")).click();
		driver.findElement(By.xpath("//button[contains(text(),'Remove')]")).click();
		Thread.sleep(2000);
		Save.click();
		
		Thread.sleep(3000);
		Edit.click();
		Thread.sleep(2000);
		
	
		Addnewstation.click();
		
		WebElement stationchekBox = driver.findElement(By.xpath("//tr[6]//td[1]//div[1]//button[1]"));
		JavascriptExecutor jx = (JavascriptExecutor) driver;
		jx.executeScript("arguments[0].click();", stationchekBox);
		
		//StationChekBox.click();
		Thread.sleep(2000);
		Select.click();
		Thread.sleep(2000);
		
		Save.click();
		
	}
	
	public void VerifyAddedStation() throws InterruptedException {
		
		Thread.sleep(4000);
		Edit.click();
		Thread.sleep(3000);
			
		String Tracker = driver.findElement(By.xpath("//td[contains(text(),'Tracker')]")).getText();
		Assert.assertEquals(Tracker, "Tracker");
		
		Save.click();
	}
	
	public void ConfigSession() throws InterruptedException {
		
		Thread.sleep(4000);
		Edit.click();
		Thread.sleep(3000);
		
		ReadingSessionSelect.click();
		ReadingSelectOvrride.click();
		driver.findElement(By.xpath("//th[1]//input[1]")).sendKeys("900R");
		driver.findElement(By.xpath("//td[contains(text(),'Reading GOALS Appraisal')]")).click();
		Thread.sleep(1500);
		Select.click();
		
		Thread.sleep(2000);
		ListeningSessionSelect.click();
		ListeningSelectOvrride.click();
		driver.findElement(By.xpath("//th[1]//input[1]")).sendKeys("041L");
		driver.findElement(By.xpath("//td[contains(text(),'Listening GOALS Level A')]")).click();
		Thread.sleep(1500);
		Select.click();
		Thread.sleep(1500);
		Save.click();
		
	}
	
	public void StartTestStation() throws InterruptedException {
		
		Thread.sleep(3000);
		WebElement save = driver.findElement(By.xpath("//tr[1]//td[3]//button[1]"));
		JavascriptExecutor jv = (JavascriptExecutor) driver;
		jv.executeScript("arguments[0].click();", save);
		
		
		WebElement strt = driver.findElement(By.xpath("//button[(@ng-click='continue()')]"));
		JavascriptExecutor jx = (JavascriptExecutor) driver;
		jx.executeScript("arguments[0].click();", strt);
		
	
	}
	
	
}

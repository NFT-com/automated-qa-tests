package com.nft.qa.pages;

import org.openqa.selenium.By;
import org.openqa.selenium.JavascriptExecutor;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.support.FindBy;
import org.openqa.selenium.support.PageFactory;

import com.b1.qa.util.TestUtility;
import com.nft.qa.base.TestBase;

public class AccountSettings extends TestBase {
	
	TestUtility testUtil = new TestUtility();
	
	
	@FindBy(xpath="//div[contains(text(),'Settings')]")
	WebElement Setting;
	
	@FindBy(xpath="//div[contains(text(),'SEO Keywords')]")
	WebElement SEOLabel;
	
	@FindBy(xpath="//input[contains(@id,'undefined-PleasetypeandhitEntertoaddSEOKeywords')]")
	WebElement SEOTextbox;
	
	@FindBy(xpath="//div[contains(text(),'testing')]")
	WebElement UpdatedContent;
	
	@FindBy(xpath="//span[contains(text(),'Update')]")
	WebElement Updatebtn;
	
	@FindBy(xpath="//div[@class='normal show']//div[@class='label labelTop'][contains(text(),'Payment Methods')]")
	WebElement PaymentMethods;

	@FindBy(xpath="//body//label[2]")
	WebElement PayCheckBox;
	
	@FindBy(xpath="//button[@type='submit']//div//div//span[contains(text(),'Update')]")
	WebElement Update;
	
	
	
	public AccountSettings() 
	{

		PageFactory.initElements(driver, this);
	}
	
	
	public void gotoSettingstab() {
		TestUtility.clickOn(driver, Setting, 30);

	}
	

	public void gotoSEOlabel() {
		TestUtility.clickOn(driver, SEOLabel, 30);

	}
	
	
	
	public void AddSEOData() throws InterruptedException {

		
		Thread.sleep(2000);
		SEOTextbox.sendKeys("testing");
		
		TestUtility.clickOn(driver, Updatebtn, 30);
	}
	
	
public void AddPaymentBox() throws InterruptedException {

		
		Thread.sleep(2000);
		TestUtility.clickOn(driver, PaymentMethods, 30);
		TestUtility.clickOn(driver, PayCheckBox, 30);
		WebElement UpdateBtn = driver.findElement(By.xpath("//button[@type='submit']//div//div//span[contains(text(),'Update')]"));
		JavascriptExecutor js = (JavascriptExecutor) driver;  
		js.executeScript("arguments[0].click();", UpdateBtn);
		
		
	}
	
	

}

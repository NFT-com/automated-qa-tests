package com.b1.qa.pages;

import org.openqa.selenium.support.PageFactory;
import org.testng.Assert;

import com.b1.qa.util.TestUtility;
import com.nft.qa.base.TestBase;

public class LoginURLPage extends TestBase {

	TestUtility testUtil = new TestUtility();

	public LoginURLPage() {
		PageFactory.initElements(driver, this);
	}

	public void VerifyRedirectedPAgeURL() {
		String PageUrl = driver.getCurrentUrl();
		System.out.println("The Url of a page is:" + PageUrl);
		Assert.assertEquals("https://one-staging.brandify.com/", PageUrl);

	}

	public void VerifyUrlAfterLogin() {
		String PageUrl = driver.getCurrentUrl();
		System.out.println("The Url of a page After Login is:" + PageUrl);
		Assert.assertEquals("https://one-staging.brandify.com/location/dashboard", PageUrl);

	}

}
